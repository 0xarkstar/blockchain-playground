{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist"
  },
  "include": [
    "./hardhat.config.ts",
    "./src/**/*.ts",
    "./test/**/*.ts",
    "./scripts/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "artifacts", "cache"]
}
